@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="content-type" content="text/html; charset=euc-kr">
    <meta http-equiv="cache-control" content="no-cache">
    <meta http-equiv="pragma" content="no-cache">
    <meta http-equiv="expires" content="-1">
    @Styles.Render("~/bundles/css")

    <style type="text/css">
        .otpWrap {
            -webkit-box-shadow: 10px 10px 11px 2px rgba(133,128,133,0.93);
            -moz-box-shadow: 10px 10px 11px 2px rgba(133,128,133,0.93);
            box-shadow: 10px 10px 11px 2px rgba(133,128,133,0.93);
            background-color: #ffffff;
            border-radius: 30px 0px 0px 0px;
            -moz-border-radius: 30px 0px 0px 0px;
            -webkit-border-radius: 30px 0px 0px 0px;
            border: 0px solid #000000;
        }
    </style> 
</head>
<body style="background-color:#d6d6d6">
    <div style="width:100%;height:100%;">
        <div class="otpWrap" style="position:absolute; top:50%; left:50%; margin-left:-150px;margin-top:-170px; width:300px; height:260px;">
            <div style="margin-top:40px;font-size:13px;margin-left:20px;">
                <label id="lbLoginID">ID</label>
                <input type="text" id="txtLoginID" class="txtBox" style="width:260px;height:28px;font-size:14px;" value="ispark" />
            </div>
            <div style="margin-top:10px;font-size:13px;margin-left:20px;">
                <label id="lbLoginPW">PW</label>
                <input type="password" id="txtLoginPW" class="txtBox" style="width:260px;height:28px;font-size:14px;" value="test1234" />
            </div>
            <div style="margin-top:30px;font-size:12px;margin-left:20px;text-align:right;padding-right:10px;">
                <button id="btnLogin" class="btn" onclick="">로그인</button>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script type="text/javascript">
        $(document).ready(function () {
            $(document).keydown(function (e) {
                if (e.keyCode == 13) { //13:엔터키
                    $("#btnLogin").trigger("click");
                }
            });

            $("#btnLogin").on("click", function () {
                var tryLoginID = $("#txtLoginID").val();
                var tryLoginPW = $("#txtLoginPW").val();

                if (tryLoginID.trim() === "") {
                    alert("아이디가 입력되지 않았습니다.");
                    $("#txtLoginID").focus();
                    return false;
                }

                if (tryLoginPW.trim() === "") {
                     alert("비밀번호가 입력되지 않았습니다.");
                    $("#txtLoginPW").focus();
                    return false;
                }

                var param = {};
                param.login_id = tryLoginID;
                param.login_pw = tryLoginPW;

                $.post('/Login/TryLogin', { loginInfo: param }, function (res) {
                    if (res.isError) {
                        alert(res.resultMessage);
                        return false;
                    }

                    location.replace(res.url);
                }).fail(function (err) {
                    alert("시스템 오류가 발생하였습니다. 관리자에게 문의 부탁드립니다.");
                    console.log(err);
                })

            })
        });

    </script>
</body>
</html>
