<div>
    <input type="text" class="txtBox" id="txtBookmarkName" style="width:235px;height:26px" placeholder="@Resources.Resource.res0148." />@*북마크 명을 입력해주세요*@
</div>

<div style="text-align:right;margin-top:10px;">
    <button id="btnSaveBookmark">@Resources.Resource.res0503@*저장*@</button>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#btnSaveBookmark").jqxButton();

        $("#btnSaveBookmark").on("click", function () {
            SetSaveBookmark();
        })
    });

    function SetSaveBookmark() {
        if ($("#txtBookmarkName").val() === "") {
            alert("@Resources.Resource.res0155.");//그룹명이 입력되지 않았습니다

            return false;
        }

        $.post("/Dist/SetBookmarkGroup", { "dist_idx": $("#dist_idx").val(), "grp_nm" : $("#txtBookmarkName").val()  }, function (res) {
            if (res.isError) {
                alert(res.resultMessage);
                console.log(res.resultDescription);
                return;
            }

            alert("@Resources.Resource.res0188.");//저장되었습니다

            CloseSetBookmark();
        })

    }


</script>